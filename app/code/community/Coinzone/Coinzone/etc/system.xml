<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <payment>
            <groups>
                <Coinzone translate="label" module="paygate">
                    <label>Coinzone</label>
                    <comment><![CDATA[Add your Client Code and API Key below to configure Coinzone.
                        This can be found on the API tab of the Settings page in the <a href="https://merchant.coinzone.com/settings">Coinzone Control Panel</a>.<br/>
                         Have questions?  Please visit our <a href="http://support.coinzone.com/">Customer Support Site</a>.<br/>
                         Don't have a Coinzone account? <a href="https://merchant.coinzone.com/signup">Sign up for free.</a>]]>
                    </comment>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <clientCode translate="label">
                            <label>Client Code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clientCode>
                        <apiKey translate="label">
                            <label>API Key</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </apiKey>
                    </fields>
                </Coinzone>
            </groups>
        </payment>
    </sections>
</config>
